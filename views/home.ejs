    <div class="top-bar">
        <div class="access-tools">
            <a href="javascript:void(0)" onclick="resizeText(1)">A+</a>
            <a href="javascript:void(0)" onclick="resizeText(-1)">A-</a>
            <a href="javascript:void(0)" onclick="toggleContrast()">&#9680; Toggle Contrast</a>
            <a href="javascript:void(0)" onclick="resetView()">&#8635; Reset</a>
        </div>
    </div>

<header class="main-header">
    <div class="logo-section">
        <img 
            src="/images/nith-logo.png" 
            alt="National Institute of Technology Hamirpur Logo"
            class="nith-logo"
        />
    </div>
</header>


    <nav class="nav-bar">
        <div class="nav-container">
            <a href="#">Contact 9015048xxx for enquiry or email us at xxxx@nith.ac.in</a>
        </div>
    </nav>

    <div class="container">
        <div class="form-card">
            <div class="form-header">
                <h2>Student Activity Registration</h2>
                <p>Please fill your details for LA/CA Allocation</p>
            </div>

            <form id="regForm" onsubmit="handleFormSubmit(event)">
                
                <div class="form-group">
                    <label for="email">Institute Email ID</label>
                    <input type="email" id="email" name="email" placeholder="24abcXXX@nith.ac.in" required>
                    <div id="emailError" class="error-msg">Email must follow the format 24abcXXX@nith.ac.in</div>
                </div>

                <div class="form-group">
                    <label for="name">Full Name</label>
                    <input type="text" id="name" name="name" placeholder="Enter your full name" required>
                </div>

                <div class="form-group">
                    <label for="rollno">Roll Number</label>
                    <input type="text" id="rollno" name="rollno" placeholder="24abcXXX" maxlength="8" required>
                    <div id="rollError" class="error-msg">Roll Number must start with 24, followed by Branch (3 letters) and ID (3 digits).</div>
                </div>

                <div class="form-group">
                    <label for="gender">Gender</label>
                    <select id="gender" name="gender" required>
                        <option value="">Select Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                </div>

                <div class="note-box">
                    <strong>Note:</strong> Students who are already in <b>NCC</b> or <b>Dramatics/Music</b> must select their respective subject from the list below.
                </div>

                <div class="form-group">
                    <label for="subject">Select Activity (LA/CA)</label>
                    <select id="subject" name="subject" required>
                        <option value="">-- Select Course --</option>
                        
                        <% subjects.forEach(function(sub) { %>
                            <% if (sub.seats > 0) { %>
                                <option value="<%= sub.code %>">
                                    <%= sub.code %>: <%= sub.name %> [<%= sub.seats %> seats left]
                                </option>
                            <% } else { %>
                                <option value="<%= sub.code %>" disabled>
                                    <%= sub.code %>: <%= sub.name %> (SEATS FULL)
                                </option>
                            <% } %>
                        <% }); %>

                    </select>
                </div>

                <button type="submit" class="btn-submit">Submit Registration</button>
            </form>
        </div>
    </div>

    <script>
        // --- Accessibility Functions ---
        let currentZoom = 1;

        function resizeText(multiplier) {
            if (multiplier === 1) currentZoom += 0.1;
            else currentZoom -= 0.1;
            document.body.style.zoom = currentZoom;
        }

        function toggleContrast() {
            document.body.classList.toggle('high-contrast');
        }

        function resetView() {
            currentZoom = 1;
            document.body.style.zoom = "1";
            document.body.classList.remove('high-contrast');
        }

        // --- Form Validation Functions ---
        function handleFormSubmit(e) {
            e.preventDefault(); 

            const email = document.getElementById('email').value;
            const rollno = document.getElementById('rollno').value;
            const emailError = document.getElementById('emailError');
            const rollError = document.getElementById('rollError');
            
            let isValid = true;

            // 1. Email Regex
            const emailPattern = /^\d{2}[a-z]{3}\d{3}@nith\.ac\.in$/i;
            if (!emailPattern.test(email)) {
                emailError.style.display = 'block';
                isValid = false;
            } else {
                emailError.style.display = 'none';
            }

            // 2. Roll No Regex
            const rollPattern = /^\d{2}[a-z]{3}\d{3}$/i;
            if (!rollPattern.test(rollno)) {
                rollError.style.display = 'block';
                isValid = false;
            } else {
                rollError.style.display = 'none';
            }

            if (isValid) {
                const formData = {
                    email: email,
                    name: document.getElementById('name').value,
                    rollNo: rollno.toUpperCase(), 
                    gender: document.getElementById('gender').value,
                    subject: document.getElementById('subject').value
                };

                console.log("Submitting:", formData);
                alert(`Verification link sent to ${email}!`);
                // e.target.submit(); // Enable this for real submission
            }
        }
    </script>
